<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailSkuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titleSurat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Surat Keterangan Usaha"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_nomorSurat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nomor_surat"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ket_kepala_desa"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_namaSku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Nama : NIZAM RULISTA Al-Ghifari"/>

        <TextView
            android:id="@+id/tv_tempatSku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Tempat : Bandung, 06-03-1992"/>

        <TextView
            android:id="@+id/tv_tanggalLahirSku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Tempat : Bandung, 06-03-1992"/>

        <TextView
            android:id="@+id/tv_jKSku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Jenis Kelamin : Laki-laki"/>

        <TextView
            android:id="@+id/tv_statusPerkawinanSku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Status Perkawinan : Belum Kawin"/>

<!--        <TextView-->
<!--            android:id="@+id/tv_pekerjaanSku"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="12sp"-->
<!--            android:text="Pekerjaan : Karyawan Honorer"/>-->

        <TextView
            android:id="@+id/tv_alamatAsalSku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Alamat Asal : Kp. Bolorong RT.001, RW001"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:textSize="12sp"
            android:text="@string/keterangan_usaha"/>

        <TextView
            android:id="@+id/tv_namaPerusahaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Nama Perusahaan : Toko Mas Barokah"/>

        <TextView
            android:id="@+id/tv_bidangUsaha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Bidang Usaha : Jual Beli Perhiasan"/>

        <TextView
            android:id="@+id/tv_statusBangunan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Status Bangunan/Tanah : Hak Milik"/>

        <TextView
            android:id="@+id/tv_tahunKegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Tahun Kegiatan : 2017"/>

        <TextView
            android:id="@+id/tv_noSppt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="No. SPPT : -"/>

        <TextView
            android:id="@+id/tv_lokasiUsaha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Lokasi Usaha : Jl. Raya Timur No. 65 Singaparna"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/surat_keterangan"
            android:textSize="12sp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</RelativeLayout>