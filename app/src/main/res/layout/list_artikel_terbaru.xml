<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/et_imgArtikelTerbaru"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_map"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/et_namaArtikelTerbaru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Artikel"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/et_deskripsiArtikelTerbaru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi artikel ini tentang informasi seputar desa-desa yang bersangkutan"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>