<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="26dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:auto_cycle="true"
                app:placeholder="@color/cardview_dark_background"
                app:error_image="@color/cardview_dark_background"
                app:delay="0"
                app:period="1000"
                app:corner_radius="5">
            </com.denzcoskun.imageslider.ImageSlider>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:weightSum="4">
                <Button
                    android:id="@+id/btn_profileDesa"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:text="Profile Desa"
                    android:layout_weight="1"
                    android:paddingTop="16dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/my_button"
                    android:textColor="#FFFFFF"
                    android:drawableTint="#FFFFFF"
                    android:textSize="12sp"
                    android:drawableTop="@drawable/ic_map"/>

                <Button
                    android:id="@+id/btn_ambulance"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="Panggil Ambulance"
                    android:paddingTop="16dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/my_button"
                    android:textColor="#FFFFFF"
                    android:drawableTint="#FFFFFF"
                    android:textSize="12sp"
                    android:drawableTop="@drawable/ic_baseline_call_24"/>

                <Button
                    android:id="@+id/btn_indahDesaku"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="90dp"
                    android:text="Indahnya Desaku"
                    android:paddingTop="16dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/my_button"
                    android:textColor="#FFFFFF"
                    android:drawableTint="#FFFFFF"
                    android:textSize="12sp"
                    android:drawableTop="@drawable/ic_baseline_local_florist_24"/>

                <Button
                    android:id="@+id/btn_video"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="90dp"
                    android:text="Video Desa"
                    android:paddingTop="16dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/my_button"
                    android:textColor="#FFFFFF"
                    android:drawableTint="#FFFFFF"
                    android:textSize="12sp"
                    android:drawableTop="@drawable/ic_video"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Berita Terkini"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_map"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Artikel"
                        android:layout_marginBottom="8dp"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Isi artikel ini tentang informasi seputar desa-desa yang bersangkutan"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_map"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Artikel"
                        android:layout_marginBottom="8dp"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Isi artikel ini tentang informasi seputar desa-desa yang bersangkutan"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_map"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Artikel"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Isi artikel ini tentang informasi seputar desa-desa yang bersangkutan"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Indahnya Desaku"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:src="@drawable/lembaga_eksekutif"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>