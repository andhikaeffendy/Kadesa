<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pemerintah.PemerintahFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lembaga Eksekutif"
            android:layout_margin="16dp"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">
            <Button
                android:id="@+id/btn_lembaga1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="Profile"
                android:paddingTop="16dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@drawable/my_button"
                android:textColor="#FFFFFF"
                android:drawableTint="#FFFFFF"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_map"/>

            <Button
                android:id="@+id/btn_lembaga2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxWidth="80dp"
                android:text="Panggil Ambulance"
                android:paddingTop="16dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@drawable/my_button"
                android:textColor="#FFFFFF"
                android:drawableTint="#FFFFFF"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_baseline_image_24"/>

            <Button
                android:id="@+id/btn_lembaga3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="Video Desa"
                android:paddingTop="16dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@drawable/my_button"
                android:textColor="#FFFFFF"
                android:drawableTint="#FFFFFF"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_video"/>

            <Button
                android:id="@+id/btn_lembaga4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="Alamat Lengkap"
                android:paddingTop="16dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@drawable/my_button"
                android:textColor="#FFFFFF"
                android:drawableTint="#FFFFFF"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_map"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:weightSum="4">
            <Button
                android:id="@+id/btn_sejarah"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="Profile"
                android:paddingTop="16dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@drawable/my_button"
                android:textColor="#FFFFFF"
                android:drawableTint="#FFFFFF"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_map"/>

            <Button
                android:id="@+id/btn_foto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxWidth="80dp"
                android:text="Panggil Ambulance"
                android:paddingTop="16dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@drawable/my_button"
                android:textColor="#FFFFFF"
                android:drawableTint="#FFFFFF"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_baseline_image_24"/>

            <Button
                android:id="@+id/btn_Video"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="Video Desa"
                android:paddingTop="16dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@drawable/my_button"
                android:textColor="#FFFFFF"
                android:drawableTint="#FFFFFF"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_video"/>

            <Button
                android:id="@+id/btn_alamat"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="Alamat Lengkap"
                android:paddingTop="16dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:background="@drawable/my_button"
                android:textColor="#FFFFFF"
                android:drawableTint="#FFFFFF"
                android:textSize="12sp"
                android:drawableTop="@drawable/ic_map"/>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>